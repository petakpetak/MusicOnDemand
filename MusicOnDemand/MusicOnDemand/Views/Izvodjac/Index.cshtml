@model IEnumerable<MusicOnDemand.Models.izvođač>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
@using (Html.BeginForm("Index", "Izvodjac", FormMethod.Get))
{
    @Html.TextBox("search", "", new { @id = "search-textbox" })

    <input type="submit" class=" btn btn-primary btn-large" />
}

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.nazivIzvođač)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.država.nazivDržave)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.nazivIzvođač)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.država.nazivDržave)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.izvođačID }) |
            @Html.ActionLink("Details", "Details", new { id=item.izvođačID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.izvođačID })
        </td>
    </tr>
}

</table>
